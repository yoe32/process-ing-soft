@{
    this.Layout = null;
}

<div id="moviesTeaserList">

    @if (Model.Count == 0 && ViewBag.Skip == 0)
    {
        <text>No movies</text>
    }

    @foreach (Contoso.Apps.Movies.Data.Models.Product item in Model)
    {
        @Html.Partial("_MoviesTeaser", item)
    }

    @if (ViewData["moreUrl"] != null)
    {
        <div class="grid-item grid-item--height75 grid-item--width25" id="grid-item-moreLink">
            <div style="padding-top: 35px; padding-left: 48%">
                <a href='@ViewData["moreUrl"]' id="moreLink">More</a>
            </div>
        </div>
    }
</div>
